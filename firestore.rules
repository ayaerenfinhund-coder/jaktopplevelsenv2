rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is whitelisted
    function isWhitelisted() {
      return request.auth != null && 
             (request.auth.token.email == 'sandbergsimen90@gmail.com' || 
              request.auth.token.email == 'w.geicke@gmail.com');
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Hunts collection - only whitelisted users
    match /hunts/{huntId} {
      allow read, write: if isWhitelisted();
    }
    
    // Dogs collection - only whitelisted users
    match /dogs/{dogId} {
      allow read, write: if isWhitelisted();
    }
    
    // Tracks collection - only whitelisted users
    match /tracks/{trackId} {
      allow read, write: if isWhitelisted();
    }
    
    // Any other collections - deny by default
  }
}

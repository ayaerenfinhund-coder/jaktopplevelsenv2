rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is whitelisted
    function isWhitelisted() {
      return request.auth != null && 
             (request.auth.token.email == 'sandbergsimen90@gmail.com' || 
              request.auth.token.email == 'w.geicke@gmail.com');
    }
    
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // User uploads - only whitelisted users can upload/read
    match /users/{userId}/{allPaths=**} {
      allow read, write: if isWhitelisted();
    }
  }
}
